autoload -Uz compinit && compinit
autoload -U colors && colors
autoload -Uz vcs_info

# System Specific config
# source ~/.bashrc
if hash vim 2>/dev/null; then
    alias editor=vim
else
    echo "Default editor not on $PATH"
fi

source ~/.zsh_system
alias sysprof='editor ~/.zsh_system'

# Enable source control of dotfiles from home directory without symlinks:
# https://www.atlassian.com/git/tutorials/dotfiles
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

alias ll='ls -lh'
alias clearBranches='git branch | grep -v "master" | xargs git branch -D'

# .dotfile shortcuts
alias vimrc="editor ~/.vimrc"
alias prof="editor ~/.zsh_profile"
alias runprof=". ~/.zsh_profile"

# Aliases:
alias g="git"
alias fclear="printf '\033c'"

# Git
source ~/.git-prompt.sh

zstyle ':vcs_info:*' enable git
zstyle ':completion:*:git:*' script ~/.zsh/git-completion.bash
fpath=(~/.zsh $fpath)

# Prompt
precmd() {
    vcs_info
}

setopt PROMPT_SUBST
PS1='%B%F{180}%c%F{1}$(__git_ps1 " (%s) ") %F{196}ùù∫ %f%b'

